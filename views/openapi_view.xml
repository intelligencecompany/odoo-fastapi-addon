<odoo>
    <record id="view_openapi_model_form" model="ir.ui.view">
        <field name="name">openapi.model.form</field>
        <field name="model">openapi.model</field>
        <field name="arch" type="xml">
            <form string="OpenAPI Model">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <footer>
                        <button name="action_button_1" type="object" string="Button 1" class="oe_highlight"/>
                        <button name="action_button_2" type="object" string="Button 2"/>
                        <button name="action_button_3" type="object" string="Button 3"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_openapi_model" model="ir.actions.act_window">
        <field name="name">OpenAPI Model</field>
        <field name="res_model">openapi.model</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_openapi_model_main" name="OpenAPI Model" sequence="10"/>
    <menuitem id="menu_my_model" name="OpenAPI Model" parent="menu_openapi_model_main" action="action_openapi_model"/>
</odoo>
