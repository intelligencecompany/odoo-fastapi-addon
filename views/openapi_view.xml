<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_openapi_model_form" model="ir.ui.view">
        <field name="name">openapi.model.form</field>
        <field name="model">openapi.model</field>
        <field name="arch" type="xml">
            <form string="OpenAPI Model">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <footer>
                        <button string="Action Button 1" type="object" name="action_button_1" class="oe_highlight"/>
                        <button string="Action Button 2" type="object" name="action_button_2"/>
                        <button string="Action Button 3" type="object" name="action_button_3"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_openapi_model_tree" model="ir.ui.view">
        <field name="name">openapi.model.tree</field>
        <field name="model">openapi.model</field>
        <field name="arch" type="xml">
            <tree string="OpenAPI Model">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_openapi_model" name="OpenAPI Model" parent="base.menu_administration" action="action_openapi_model"/>
    
    <record id="action_openapi_model" model="ir.actions.act_window">
        <field name="name">OpenAPI Model</field>
        <field name="res_model">openapi.model</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
