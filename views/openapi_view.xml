<odoo>
    <record id="view_openapi_model_form" model="ir.ui.view">
        <field name="name">openapi.model.form</field>
        <field name="model">openapi.model</field>
        <field name="arch" type="xml">
            <form string="OpenAPI Model">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <footer>
                        <button name="action_button_1" type="object" string="Button 1" class="oe_highlight"/>
                        <button name="action_button_2" type="object" string="Button 2"/>
                        <button name="action_button_3" type="object" string="Button 3"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem 
        id="menu_openapi_model_main" 
        name="OpenAPI" 
        sequence="0"
        web_icon="calendar,static/description/icon.png"
        groups="base.group_user"/>
    
    <menuitem 
        id="menu_openapi_model" 
        name="OpenAPI" 
        parent="menu_openapi_model_main" 
        action="view_openapi_model_form"
        sequence="0"
        groups="base.group_user"/>
    
    <record id="action_openapi_model" model="ir.actions.act_window">
        <field name="name">OpenAPI</field>
        <field name="res_model">openapi.model</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Generate OpenAPI
            </p>
        </field>
    </record>
</odoo>
